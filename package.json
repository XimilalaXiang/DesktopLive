{
  "name": "delive",
  "version": "1.0.5",
  "description": "Windows桌面音频实时转录系统 - 支持多ASR提供商",
  "private": true,
  "main": "dist-electron/main.js",
  "author": "XimilalaXiang",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:electron\"",
    "dev:client": "cd frontend && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "npm run build:client && npm run build:electron",
    "build:client": "cd frontend && npm run build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "install:all": "npm install && cd frontend && npm install && cd ../server && npm install",
    "generate-icons": "node scripts/generate-icons.mjs"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/pako": "^2.0.4",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^25.1.8",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.delive.app",
    "productName": "DeLive",
    "copyright": "Copyright © 2024 XimilalaXiang",
    "icon": "build/icon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "frontend/dist/**/*",
      "frontend/public/**/*",
      "build/icon.ico",
      "build/icon.png"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DeLive"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "XimilalaXiang",
      "repo": "DeLive",
      "releaseType": "release"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.7.3",
    "express": "^4.21.2",
    "pako": "^2.1.0",
    "ws": "^8.19.0"
  }
}
